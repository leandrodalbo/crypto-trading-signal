[
    {
      "name": "${ecs_service_name}",
      "image": "${image_url}",
      "essential": true,
      "environment": [
        { "name": "SPRING_R2DBC_USERNAME", "value": "${db_user}"},
        { "name": "SPRING_R2DBC_PASSWORD", "value": "${db_password}"},
        { "name": "SPRING_R2DBC_URL",  "value": "r2dbc:postgresql://${db_host}:5432/${db_name}"},
        { "name": "SPRING_FLYWAY_USER", "value": "${db_user}"},
        { "name": "SPRING_FLYWAY_PASSWORD", "value": "${db_password}"},
        { "name": "SPRING_FLYWAY_URL",  "value": "jdbc:postgresql://${db_host}:5432/${db_name}"}
      ],
      "portMappings": [{
        "containerPort": ${container_port},
        "hostPort": ${container_port}
      }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${logs_group_id}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "${ecs_service_name}"
        }
      }
    }
  ]